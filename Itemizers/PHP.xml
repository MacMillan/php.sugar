<?xml version="1.0"?>
<itemizer>
	<!-- PHP Source; <?php ... ?>, <?= =?> -->
    <recipe name="source.block.php">
		<class>ESBaseItem</class>
		<start-selector>begin.php:capture(name)</start-selector>
		<end-selector>end.php:capture(name)</end-selector>
		<subrecipes>
			<include recipe="comment.php" />
			<include recipe="class.php" />
			<include recipe="include.php" />
			<include recipe="function.php" />
			<include recipe="magic.function.php" />
		</subrecipes>
	</recipe>
	
	<recipe name="comment.php">
		<class>ESCommentItem</class>
		<selector>comment</selector>
	</recipe>
	
	<!-- Defining a custom class -->
	<recipe name="class.php">
		<class>ESBaseItem</class>
		<start-selector>meta.class.php:has-child(entity.name.type.class.php:capture(name))</start-selector>
		<subrecipes>
			<include recipe="function.php" />
		</subrecipes>
	</recipe>
	
	<!-- Defining an include -->
	<recipe name="include.php">
		<class>ESBaseItem</class>
		<selector>meta.include.php:has-child(keyword.control.import.include.php:capture(name))</selector>
		<subrecipes>
			<recipe name="file.include.php">
				<selector>meta.include.php:has-child(meta.string-contents.php:capture(name))</selector>
			</recipe>
		</subrecipes>
	</recipe>
	
	<!-- Defining a custom function -->
	<recipe name="function.php">
		<class>ESBaseItem</class>
		<start-selector>meta.function.php:has-child(entity.name.function.php:capture(name))</start-selector>
		<subrecipes>
			<include recipe="block.hidden.php" />
		</subrecipes>
	</recipe>
	
	<!-- Defining a magic function -->
	<recipe name="magic.function.php">
		<class>ESBaseItem</class>
		<start-selector>meta.function.php:has-child(support.function.magic.php:capture(name))</start-selector>
		<subrecipes>
			<include recipe="block.hidden.php" />
		</subrecipes>
	</recipe>
	
	<recipe name="block.hidden.php">
		<class>ESBaseItem</class>
		<start-selector>meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
	</recipe>
	
</itemizer>