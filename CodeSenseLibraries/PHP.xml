	<set name="lveik.php.control.switch">
		<behavior>
			<append-dynamic>
				<matched-suffix>(\s*:)|[^:]</matched-suffix>
				<transform-into> &#40;#{1:mixed statement}&#41;&#123;\n\tdefault:\n\t\t#{2}\n\t\tbreak;\n&#125;</transform-into>
			</append-dynamic>
		</behavior>
		
		<completion string="switch" />
	</set>

	<set name="lveik.php.control.case">
		<behavior>
			<append-dynamic>
				<matched-suffix>(\s*:)|[^:]</matched-suffix>
				<transform-into> #{1:mixed variable}:\n\t\t\#{2}\n\t\tbreak;</transform-into>
			</append-dynamic>
		</behavior>
		
		<completion string="case" />
	</set>
	
</codesense>