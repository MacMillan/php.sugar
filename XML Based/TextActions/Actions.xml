<action-recipes>
  <action id="com.conceitedsoftware.TextActions.BasilSugar.CSBasilSugarShowConsoleAction" category="actions.text.PHP/php.utilities">
    <class>CSBasilSugarShowConsoleAction</class>
    <title>Show Console...</title>
    <key-equivalent>cmd shift L</key-equivalent>
    <setup>
      <filename>/Applications/MAMP/logs/php_error.log</filename>
    </setup>
  </action>
  
  <action id="com.conceitedsoftware.TextActions.BasilSugar.CSBasilSugarCheckSyntaxAction" category="actions.text.PHP/php.utilities">
    <class>CSBasilSugarCheckSyntaxAction</class>
    <title>Check Syntax...</title>
    <key-equivalent>cmd shift ;</key-equivalent>
    <setup>
      <php-path>/usr/bin/php</php-path>
    </setup>
  </action>
  
  <action id="com.conceitedsoftware.TextActions.BasilSugar.CSBasilSugarShowReferenceAction" category="actions.text.PHP/php.utilities">
    <class>CSBasilSugarShowReferenceAction</class>
    <title>Show Documenation...</title>
    <key-equivalent>cmd shift H</key-equivalent>
    <setup>
    </setup>
  </action>
</action-recipes>