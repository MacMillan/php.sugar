<settings>

	<language id="com.gridlee.Programming.PHP.Standard" hidden="true">
		<name>PHP Standard</name>
		<root-zone>sourcecode.php</root-zone>
		
		<meta>
		    <name>
		        PHP Standard
		    </name>
		    <description>
		        Official php.sugar for Espresso.
		    </description>
		    <author>
		        Derek Reynolds
		    </author>
		    <identifier>
		        com.gridlee.Sugar.PHP
		    </identifier>
		    <version status="preview">
		        1.0b6
		    </version>
		    <dependencies>
                <dependency id="name.elliottcable.Sugar.Regex">Regex</dependency>
                <dependency id="net.fileability.SQL">SQL</dependency>
            </dependencies>
		</meta>
		
	</language>

    <language id="com.gridlee.Declarative.Programming.PHP">
		<name>PHP</name>
		<root-zone>source.php.html</root-zone>
		
		<detectors>
		    <extension casesensitive="false">phps</extension>
		    <extension casesensitive="false">inc</extension>
		    <extension casesensitive="false">php</extension>
			<extension casesensitive="false">php4</extension>
			<extension casesensitive="false">php5</extension>
		    <combo>
		        <extension casesensitive="false">html</extension>
		        <match-content lines="1">^(&lt;)(\?)(php|=)?</match-content>
		    </combo>
		    <combo>
		    	<extension casesensitive="false">php</extension>
		    	<match-content lines="1"><![CDATA[(?i)<!DOCTYPE html PUBLIC]]></match-content>
			</combo>
			<combo>
		    	<extension casesensitive="false">php</extension>
		    	<match-content lines="1"><![CDATA[(?i)<html]]></match-content>
			</combo>
		</detectors>
		
		<meta>
		    <name>
		        PHP
		    </name>
		    <description>
		        Official php.sugar for Espresso.
		    </description>
		    <author>
		        Derek Reynolds
		    </author>
		    <identifier>
		        com.gridlee.Sugar.PHP
		    </identifier>
		    <version status="preview">
		        1.0b6
		    </version>
		    <dependencies>
                <dependency id="name.elliottcable.Sugar.Regex">Regex</dependency>
                <dependency id="net.fileability.SQL">SQL</dependency>
            </dependencies>
		</meta>
		
	</language>

</settings>