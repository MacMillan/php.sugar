<injections>	
	<!-- Injecting PHP syntax in to open-tag (<body <?= $class; ?>>) zones -->
    <injection name="com.gridlee.injections.php-html" selector="php.html *" action="attach-before-target">
        <include syntax="sourcecode.php" />
        <cut-off>\?\></cut-off>
	</injection>
	
	<!-- Injecting PHP syntax in to open-tag (<body <?= $class; ?>>) zones -->
    <injection name="com.gridlee.injections.php-html.tag" selector="php.html tag.open" action="insert-before-children">
        <include syntax="sourcecode.php" />
        <cut-off>\?\></cut-off>
	</injection>
	
	<!-- Injecting PHP syntax in to open-tag (<body <?= $class; ?>>) zones -->
    <injection name="com.gridlee.injections.php-html.tag" selector="php.html attribute-value.string" action="insert-before-children">
        <include syntax="sourcecode.php" />
        <cut-off>\?\></cut-off>
	</injection>
	
</injections>