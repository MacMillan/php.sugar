<?xml version="1.0"?>
<itemizer>
	<!-- PHP Source; <?php ... ?>, <?= =?> -->
    <recipe name="source.block.php">
		<class>ESBaseItem</class>
		<start-selector>punctuation.section.embedded.begin.php:capture(name)</start-selector>
		<end-selector>punctuation.section.embedded.end.php:capture(name)</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<recipe name="comment.php">
		<class>ESCommentItem</class>
		<selector>comment</selector>
	</recipe>
	
	<!-- Defining a custom class -->
	<recipe name="class.php">
		<class>ESBaseItem</class>
		<start-selector>meta.class.php:has-child(name:capture(name)):capture(itemizer-firstused) + meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<!-- Defining a custom function -->
	<recipe name="function.php">
		<class>ESBaseItem</class>
		<start-selector>meta.function.php:has-child(name:capture(name)):capture(itemizer-firstused) + meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<!-- Defining a magic function -->
	<recipe name="magic.function.php">
		<class>ESBaseItem</class>
		<start-selector>meta.function.php:has-child(magic:capture(name)):capture(itemizer-firstused) + meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<!-- Defining control structures; (if, else, switch, for, foreach...)-->
	<recipe name="control.hidden.php">
		<class>ESBaseItem</class>
		<start-selector>keyword.control:capture(name) ~ meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<!-- Defining an include -->
	<recipe name="include.php">
		<class>ESBaseItem</class>
		<selector>meta.include.php:has-child(string:has-child(string-contents:capture(name))):capture(itemizer-firstused)</selector>
	</recipe>
	
</itemizer>