<?xml version="1.0"?>
<itemizer>
	<!-- PHP Source; <?php ... ?>, <?= =?> -->
    <recipe name="source.block.php">
		<class>ESBaseItem</class>
		<start-selector>begin.php:capture(name)</start-selector>
		<end-selector>end.php:capture(name)</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<!-- Variables; $variableName -->
	<recipe name="meta.name.variable.php">
		<class>ESBaseItem</class>
		<selector>meta.name.variable.php:capture(name)</selector>	
		<subrecipes>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
	<!-- Everything in between the brackets of a control structure (loops, conditions) -->
	<recipe name="construct.control.php">
		<class>ESBaseItem</class>
		<start-selector>keyword.control:capture(name) ~ meta.brace.curly.open.php</start-selector>	
		<end-selector>meta.brace.curly.close.php</end-selector>	
		<subrecipes>
			<recipe>
				<selector>meta.brace.round:has-child(capture:(name))</selector>
			</recipe>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
	<!-- Definding a custom function -->
	<recipe name="function.php">
		<class>ESBaseItem</class>
		<start-selector>function.php:has-child(name:capture(name)):capture(itemizer-firstused) + meta.brace.curly.open.php</start-selector>
		<end-selector>meta.brace.curly.close.php</end-selector>
		<subrecipes>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
	<!-- Support (built-in) Functions -->
	<recipe name="support.function.php">
		<class>ESBaseItem</class>
		<selector>support.function:capture(name)</selector>
		<subrecipes>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
	<!-- Function call (custom function) -->
	<recipe name="meta.function-call.php">
		<class>ESBaseItem</class>
		<selector>meta.function-call:capture(name)</selector>
		<subrecipes>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
</itemizer>